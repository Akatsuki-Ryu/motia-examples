# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Weaviate Configuration
# The system automatically detects whether to use local or cloud connection based on the URL

# For Docker Compose (local):
WEAVIATE_URL=http://weaviate:8080
# WEAVIATE_API_KEY is not needed for local Docker setup with anonymous access

# For Weaviate Cloud (uncomment and configure):
# WEAVIATE_URL=https://your-cluster.weaviate.cloud
# WEAVIATE_API_KEY=your_weaviate_api_key_here

# Application Configuration
NODE_ENV=development

# Optional: OpenAI Organization (if applicable)
# OPENAI_ORGANIZATION=your_openai_organization_id