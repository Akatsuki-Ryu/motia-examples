# Motia Uptime Monitor Configuration
# Copy this file to .env and configure your values

# REQUIRED: Discord webhook URL for sending alerts
# Get this from your Discord server settings > Integrations > Webhooks
# Example format: https://discord.com/api/webhooks/123456789/abcdefghijklmnopqrstuvwxyz
DISCORD_WEBHOOK=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# REQUIRED: JSON array of websites to monitor
# Each URL should be a complete HTTP/HTTPS URL
# Example: ["https://example.com","https://api.example.com/health","https://status.example.org"]
SITES=["https://motia.dev","https://google.com","https://github.com/motiadev/motia"]

# OPTIONAL: Cron expression for check interval (default: every minute)
# Format: minute hour day month dayofweek
# Examples:
#   */1 * * * *  = Every minute
#   */5 * * * *  = Every 5 minutes
#   0 * * * *    = Every hour
CHECK_INTERVAL_CRON=*/1 * * * *

# OPTIONAL: Rate limiting configuration for Discord alerts
# ALERT_BURST: Maximum number of alerts per site within the time window (default: 3)
# ALERT_WINDOW_SEC: Time window in seconds for rate limiting (default: 300 = 5 minutes)
# This prevents spam when a site is flapping between UP/DOWN states
ALERT_BURST=3
ALERT_WINDOW_SEC=300
